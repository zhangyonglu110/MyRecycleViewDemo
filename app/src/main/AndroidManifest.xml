<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyl.recycle.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.HeaderFooterActivity"/>
        <activity android:name=".ui.activity.NormalActivity"/>
        <activity android:name=".ui.activity.RefreshNormalActivity"/>
        <activity android:name=".ui.activity.RefreshMoreNormalActivity"/>
        <activity android:name=".ui.activity.RollPagerHeaderActivity"/>
        <activity android:name=".ui.activity.MyRecycleViewActivity"/>
        <activity android:name=".ui.activity.GridLayoutActivity"/>
        <activity android:name=".ui.activity.RellyListActivity"/>
        <activity android:name=".ui.activity.ComplexLayoutActivity"/>
    </application>
<uses-permission android:name="android.permission.INTERNET" />
</manifest>